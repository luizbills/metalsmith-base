{
  "destination": "_site",
  "plugins": {
    "metalsmith-ignore": {
      "patterns": [
        "**/_*",
        "_**/**/*",
        "**/_**/*",
        "**/_**/**/*"
      ]
    },

    "metalsmith-nunjucks": {
      "noCache": true
    },

    "metalsmith-cssnext": {
    },

    "metalsmith-permalinks": {
      "pattern": ":name",
      "relative": false
    }
  }
}
