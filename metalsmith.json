{
  "destination": "_site",
  "plugins": {
    "metalsmith-ignore": {
      "patterns": [
        "**/_*",
        "_**/**/*",
        "**/_**/*",
        "**/_**/**/*"
      ]
    },

    "metalsmith-nunjucks": {
      "pattern": "*.html",
      "directory": "_templates"
    },

    "metalsmith-cssnext": {
    },

    "metalsmith-permalinks": {
      "pattern": ":name",
      "relative": false
    },
    
    "metalsmith-browser-sync": {
      "files": [
        "src/*"
      ],
      "server": "_site",
      "port": 9600,
      "ghostMode": false,
      "logLevel": "debug"
    }
  }
}
