{
  "destination": "_site",
  "plugins": {
    "metalsmith-watch": {
      "paths": {
        "${source}/**/*": "**/*"
      },
      "livereload": 3001
    },
    
    "metalsmith-serve": {
      "host": "0.0.0.0",
      "port": 3000,
      "http_error_files": {
        "404": "/404.html"
      }
    },
    
    "metalsmith-metaobject": {
      "debug": true,
      "codio_domain": "http://some-domain.codio.io"
    },
    
    "metalsmith-ignore": {
      "patterns": [
        "**/_*",
        "_**/**/*",
        "**/_**/*",
        "**/_**/**/*"
      ]
    },

    "metalsmith-nunjucks": {
      "noCache": true
    },

    "metalsmith-cssnext": {
    },

    "metalsmith-permalinks": {
      "pattern": ":name",
      "relative": false
    }
  }
}
